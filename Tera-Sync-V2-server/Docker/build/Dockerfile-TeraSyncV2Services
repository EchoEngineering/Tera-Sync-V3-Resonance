FROM mcr.microsoft.com/dotnet/sdk:8.0 as BUILD

COPY TeraAPI /server/TeraAPI
COPY TeraSyncServer/TeraSyncShared /server/TeraSyncServer/TeraSyncShared
COPY TeraSyncServer/TeraSyncServices /server/TeraSyncServer/TeraSyncServices

WORKDIR /server/TeraSyncServer/TeraSyncServices/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/build \
        TeraSyncServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:8.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        terasync

COPY --from=BUILD /build /opt/TeraSyncV2Services
RUN chown -R terasync:terasync /opt/TeraSyncV2Services

USER terasync:terasync
WORKDIR /opt/TeraSyncV2Services

CMD ["./TeraSyncServices"]